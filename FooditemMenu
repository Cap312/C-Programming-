#include<stdio.h>
#include<math.h>
int main ()
{
    int choice;
    printf("Enter a number from 1-5 to choose food item :\n");
    scanf("%d",&choice);
    switch (choice)
    {
    case 1:
        printf("You have entered 1. The Food Item you have chosen is :\nBurger\nPrice = Rs.129 ");
        break;
    case 2:
        printf("You have entered 2. The Food Item you have chosen is :\nPizza\nPrice = Rs.239 ");
        break;
    case 3:
        printf("You have entered 3. The Food Item you have chosen is :\nPasta\nPrice = Rs.179 ");
        break;
    case 4:
        printf("You have entered 4. The Food Item you have chosen is :\nSandwich\nPrice = Rs.149 ");
        break;
    case 5:
        printf("You have entered 5. The Food Item you have chosen is :\nFrench Fries\nPrice = Rs.99 ");
        break;
    default:
        printf("You have entered %d. \nInvalid Choice. Please enter another number.",choice);
    }
    return 0;
}
